{
  "name": "@airnub/agentic-quantitive-framework",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18",
      "installPnpm": true,
      "pnpmVersion": "10.17.1"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    }
  },
  "updateContentCommand": "bash -lc 'true'",
  "postCreateCommand": ".devcontainer/scripts/post-create.sh",
  "postStartCommand": ".devcontainer/scripts/post-start.sh",
  "forwardPorts": [3000, 54321, 54322, 54323, 54324, 54327],
  "portsAttributes": {
    "3000": { "label": "Next.js" },
    "54321": { "label": "Supabase API" },
    "54322": { "label": "Supabase Postgres" },
    "54323": { "label": "Supabase Studio" },
    "54324": { "label": "Supabase Mailpit" },
    "54327": { "label": "Supabase Logflare" }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "typescript.tsdk": "node_modules/typescript/lib",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "eslint.format.enable": false
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "deque-systems.vscode-axe-linter",
        "DavidAnson.vscode-markdownlint",
        "bradlc.vscode-tailwindcss",
        "Supabase.vscode-supabase-extension",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "christian-kohler.npm-intellisense"
      ]
    }
  }
}
