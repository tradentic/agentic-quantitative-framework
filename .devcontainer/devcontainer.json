{
  "name": "agentic-quantitative-framework",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installPoetry": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/supabase-cli:1": {}
  },
  "updateContentCommand": "bash -lc 'true'",
  "postCreateCommand": ".devcontainer/scripts/post-create.sh",
  "postStartCommand": ".devcontainer/scripts/post-start.sh",
  "forwardPorts": [3000, 54321, 54322],
  "portsAttributes": {
    "3000": { "label": "Docusaurus" },
    "54321": { "label": "Supabase API" },
    "54322": { "label": "Supabase Postgres" }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "typescript.tsdk": "node_modules/typescript/lib",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "eslint.format.enable": false
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "deque-systems.vscode-axe-linter",
        "DavidAnson.vscode-markdownlint",
        "bradlc.vscode-tailwindcss",
        "Supabase.vscode-supabase-extension",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "christian-kohler.npm-intellisense"
      ]
    }
  }
}
